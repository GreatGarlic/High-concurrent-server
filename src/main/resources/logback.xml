	<!--编解码器日志级别 -->
	<logger name="org.server.netty.codec" level="INFO">
		<appender-ref ref="CODEC" />
	</logger>





	<root level="debug">
		<appender-ref ref="ERRORFILE" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
	</root>

</configuration>  
